<h1><%= title %></h1>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="/account/add-inventory" method="post">
    <label for="classification">Classification</label>
    <select name="classification_id" id="classification" required>
      <option value="">Choose a Classification</option>
      <% classifications.forEach(classification => { %>
          <option value="<%= classification.classification_id %>"
              <%= locals.classification_id && locals.classification_id == classification.classification_id ? 'selected' : '' %>>
              <%= classification.classification_name %>
          </option>
      <% }) %>
    </select>

    <label for="make">Make</label>
    <input type="text" name="inv_make" id="make" required>

    <label for="model">Model</label>
    <input type="text" name="inv_model" id="model" required>

    <label for="year">Year</label>
    <input type="number" name="inv_year" id="year" required>

    <label for="description">Description</label>
    <textarea type="text" name="inv_description" id="description" required></textarea>

    <label for="image">Image Path</label>
    <input type="text" name="inv_image" id="image" required>

    <label for="thumbnail">Thumbnail Path</label>
    <input type="text" name="inv_thumbnail" id="thumbnail" required>

    <label for="price">Price</label>
    <input type="number" name="inv_price" id="price" required>

    <label for="miles">Miles</label>
    <input type="number" name="inv_miles" id="miles" required>

    <label for="color">Color</label>
    <input type="text" name="inv_color" id="color" required>

    <button type="submit">Create New Inventory Item</button>
</form>