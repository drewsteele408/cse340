<h1><%= title %></h1>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="/account/register" method="post">
    <label for="account_firstname">First name</label>
    <input type="text" name="account_firstname" id="first-name" required>

    <label for="account_lastname">Last name</label>
    <input type="text" name="account_lastname" id="last-name" required>

    <label for="email">Email:</label>
    <input type="email" name="account_email" id="email" required>

    <label for="password">Password:</label>
    <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
    <input type="password" name="account_password" id="accountPassword" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

    <button type="submit">Register</button>
</form>

